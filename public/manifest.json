{
  "name": "leaderport",
  "manifest_version": 3,
  "version": "0.1.0",
  "description": "Elevating Heroes, Immortalizing Legends",
  "permissions": ["scripting", "tabs", "storage", "activeTab"],
  "host_permissions": [
    "https://*.sui.io/*",
    "https://*.suinet.app/*",
    "https://*.suiexplorer.com/*",
    "https://sui-wallet.com/*",
    "https://*.suiet.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/content.js"]
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://*.sui.io/*",
      "https://*.suinet.app/*",
      "https://wallet-provider.sui.io/*"
    ],
    "ids": ["opcgpfmipidbgpenhmajoajpbobppdil"],
    "accepts_tls_channel_id": false
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' https://*.sui.io chrome-extension://opcgpfmipidbgpenhmajoajpbobppdil/"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_width": 375,
    "default_height": 600
  },
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "assets/icon-16.png",
    "24": "assets/icon-24.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  }
}
