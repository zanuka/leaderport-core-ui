{
  "name": "leaderport",
  "manifest_version": 3,
  "version": "0.1.0",
  "description": "Elevating Heroes, Immortalizing Legends",
  "permissions": ["scripting", "tabs", "storage", "activeTab"],
  "host_permissions": [
    "https://*.sui.io/*",
    "https://*.suinet.app/*",
    "https://*.suiexplorer.com/*",
    "https://sui-wallet.com/*",
    "https://*.suiet.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle",
      "world": "ISOLATED"
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://*.sui.io/*",
      "https://*.suinet.app/*",
      "https://wallet-provider.sui.io/*"
    ],
    "ids": ["opcgpfmipidbgpenhmajoajpbobppdil"]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'",
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval'; worker-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_width": 375,
    "default_height": 600
  },
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "assets/icon-16.png",
    "24": "assets/icon-24.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "background": {
    "service_worker": "service_worker.js"
  }
}
