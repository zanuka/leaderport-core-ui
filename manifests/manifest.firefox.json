{
  "name": "leaderport",
  "manifest_version": 2,
  "version": "0.1.0",
  "description": "Browser extension for real-time leaderboards and competitive rankings across sports and markets",
  "permissions": ["activeTab", "tabs", "<all_urls>"],
  "browser_action": {
    "default_popup": "popup/index.html"
  },
  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "assets/icon-16.png",
    "24": "assets/icon-24.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  }
}
