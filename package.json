{
  "name": "leaderport-core-ui",
  "version": "0.1.0",
  "description": "Core UI for LeaderPort browser extensions",
  "type": "module",
  "author": "zanuka",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/zanuka/leaderport-core-ui.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "generate-icons": "node scripts/generate-icons.js",
    "build:chrome": "BROWSER=chrome node scripts/copy-manifest.js && vite build",
    "build:firefox": "BROWSER=firefox node scripts/copy-manifest.js && vite build",
    "build:safari": "BROWSER=safari node scripts/copy-manifest.js && vite build",
    "build:edge": "BROWSER=edge node scripts/copy-manifest.js && vite build",
    "build:opera": "BROWSER=opera node scripts/copy-manifest.js && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --ignore-path .gitignore",
    "format": "prettier --write src/",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@mysten/dapp-kit": "0.14.44",
    "@mysten/sui": "^1.18.0",
    "@radix-ui/colors": "^3.0.0",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/themes": "^3.1.1",
    "@tanstack/react-query": "^5.62.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-spinners": "^0.14.1",
    "sharp": "^0.33.5",
    "styled-components": "^6.1.13",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/chrome": "^0.0.287",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.3.2",
    "typescript": "~5.6.2",
    "vite": "^6.0.1",
    "vitest": "^1.0.0"
  },
  "trustedDependencies": [
    "sharp"
  ],
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  }
}
